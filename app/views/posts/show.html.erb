<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>


<ul class="contents"> 
    <% @post.comments.each do |c|   %>
    <li>
      <%= c.content %>
    </li>
  <% end %>
</ul>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <% @post.comments.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%= c.content %></td>
        <td><%= link_to 'Show', c %></td>
      </tr>
    <% end %>
  </tbody> 
</table>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
